<div class="title">
  <h1 class="text-center">質問一覧</h1>
</div>

<ul class="media-list">
  <% @posts.each do |post| %>
    <% user = post.user %>
    <li class="media">
      <img class="mr-3" src="<%= gravatar_url(user, options = { size: 70 }) %>" alt="">
      <div class="media-body">
        <div>
         <%= link_to user.name, user_path(user), class: 'badge badge-secondary' %> <span class="text-muted">さんの質問 <%= post.created_at %> </span>
        </div>
        <div>
          <p><%= link_to post.title, post_path(post), class: 'btn btn-outline-link' %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>