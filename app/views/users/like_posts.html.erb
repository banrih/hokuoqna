<div class="title user-profile">
  <div class="icon text-center">
    <img class="rounded" src="<%= gravatar_url(@user, size: 100) %>" alt="">
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>
  <ul class="nav nav-tabs justify-content-center">
    <li class="<%= "nav-item" if current_page?(user_path(@user)) %>"><%= link_to user_path(@user), class: 'nav-link' do %> <%= @user.name %>さんの質問 <span class="badge"><%= @count_posts %></span><% end %></li>
    <li class="<%= "nav-item" if current_page?(like_posts_user_path(@user)) %>"><%= link_to like_posts_user_path(@user), class: 'nav-link active' do %> Like <span class="badge"><%= @count_posts %></span><% end %></li>
  </ul>
  <div class="row">
    <div class="media col-md-6 offset-md-3">
      <%= render 'posts/posts', posts: @like_posts %>
    </div>
  </div>
</div>